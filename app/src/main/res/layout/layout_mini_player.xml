<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/mini_player_height"
    android:background="@color/surface_color"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingStart="16dp"
    android:paddingEnd="8dp"
    android:elevation="4dp"
    android:visibility="gone"
    android:id="@+id/mini_player">

    <!-- Album Art -->
    <ImageView
        android:id="@+id/mini_album_art"
        android:layout_width="@dimen/album_art_mini_size"
        android:layout_height="@dimen/album_art_mini_size"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_corner_bg"
        android:src="@drawable/ic_music_note" />

    <!-- Song Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/mini_song_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Song Title"
            android:textAppearance="@style/TextAppearance.StashOpus.Body"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/mini_artist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Artist Name"
            android:textAppearance="@style/TextAppearance.StashOpus.Subtitle"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- Control Buttons -->
    <ImageButton
        android:id="@+id/mini_play_pause"
        style="@style/PlayerControlButton"
        android:src="@drawable/ic_play_arrow"
        android:contentDescription="@string/play" />

    <ImageButton
        android:id="@+id/mini_next"
        style="@style/PlayerControlButton"
        android:src="@drawable/ic_skip_next"
        android:contentDescription="@string/next" />

</LinearLayout>
