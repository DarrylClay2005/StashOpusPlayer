<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Equalizer Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Equalizer"
            android:textAppearance="@style/TextAppearance.StashOpus.Headline"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Equalizer Enable Switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enable Equalizer"
                android:textAppearance="@style/TextAppearance.StashOpus.Body"
                android:textSize="16sp" />

            <Switch
                android:id="@+id/equalizer_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- Preset Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Presets"
            android:textAppearance="@style/TextAppearance.StashOpus.Title"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/preset_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />

        <!-- Equalizer Bands -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frequency Bands"
            android:textAppearance="@style/TextAppearance.StashOpus.Title"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:id="@+id/bands_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp" />

        <!-- Bass Boost -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bass Boost"
            android:textAppearance="@style/TextAppearance.StashOpus.Title"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <SeekBar
                android:id="@+id/bass_boost_slider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="1000" />

            <TextView
                android:id="@+id/bass_boost_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textAppearance="@style/TextAppearance.StashOpus.Body"
                android:layout_marginStart="16dp"
                android:minWidth="48dp"
                android:gravity="center" />

        </LinearLayout>

        <!-- Virtualizer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Virtualizer"
            android:textAppearance="@style/TextAppearance.StashOpus.Title"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <SeekBar
                android:id="@+id/virtualizer_slider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="1000" />

            <TextView
                android:id="@+id/virtualizer_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textAppearance="@style/TextAppearance.StashOpus.Body"
                android:layout_marginStart="16dp"
                android:minWidth="48dp"
                android:gravity="center" />

        </LinearLayout>

        <!-- Info Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Equalizer settings are automatically saved and will be applied to all music playback."
            android:textAppearance="@style/TextAppearance.StashOpus.Subtitle"
            android:textSize="12sp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:alpha="0.7" />

    </LinearLayout>

</ScrollView>
